                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "slug продукта",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "aspirin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": "1"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Аспирин"
                                        },
                                        "slug": {
                                            "type": "string",
                                            "example": "aspirin"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
